<Page
    x:Class="Calculator.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Calculator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    
    <Grid Background="Green">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock x:ConnectionId='1' x:Name="tblStatus" Text="..." Margin="10,10,0,10" Grid.Row="0" />

        <StackPanel x:ConnectionId='2' x:Name="spCoordinates" Grid.Row="1"
                    HorizontalAlignment="Left" VerticalAlignment="Center" 
                    Margin="25, 0,0,0">

        </StackPanel>
        
        <TextBox HorizontalAlignment="Left" Margin="120,50,0,0" TextWrapping="Wrap" Text="Calculator" VerticalAlignment="Top"/>
        <TextBox x:ConnectionId='3'
            IsReadOnly="True"
            x:Name="result" HorizontalAlignment="Left" Margin="10,75,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="340"/>
        <Button x:ConnectionId='4'                    x:Name="btn7" Content="7" HorizontalAlignment="Left" Margin="78,115,0,0" VerticalAlignment="Top" Width="42"/>
        <Button x:ConnectionId='5'                    x:Name="btn8" Content="8" HorizontalAlignment="Left" Margin="125,115,0,0" VerticalAlignment="Top" Width="42"/>
        <Button x:ConnectionId='6'                    x:Name="btn9" Content="9" HorizontalAlignment="Left" Margin="172,115,0,0" VerticalAlignment="Top" Width="42"/>
        <Button x:ConnectionId='7'                      x:Name="btnDiv" Content="/" HorizontalAlignment="Left" Margin="219,115,0,0" VerticalAlignment="Top" Width="42"/>
        <Button x:ConnectionId='8'                    x:Name="btn4" Content="4" HorizontalAlignment="Left" Margin="78,152,0,0" VerticalAlignment="Top" Width="42"/>
        <Button x:ConnectionId='9'                    x:Name="btn5" Content="5" HorizontalAlignment="Left" Margin="125,152,0,0" VerticalAlignment="Top" Width="42"/>
        <Button x:ConnectionId='10'                    x:Name="btn6" Content="6" HorizontalAlignment="Left" Margin="172,152,0,0" VerticalAlignment="Top" Width="42"/>
        <Button x:ConnectionId='11'                        x:Name="btnTimes" Content="x" HorizontalAlignment="Left" Margin="219,152,0,0" VerticalAlignment="Top" Width="42"/>
        <Button x:ConnectionId='12'                    x:Name="btn1" Content="1" HorizontalAlignment="Left" Margin="78,189,0,0" VerticalAlignment="Top" Width="42"/>
        <Button x:ConnectionId='13'                    x:Name="btn2" Content="2" HorizontalAlignment="Left" Margin="125,189,0,0" VerticalAlignment="Top" Width="42"/>
        <Button x:ConnectionId='14'                    x:Name="btn3" Content="3" HorizontalAlignment="Left" Margin="172,189,0,0" VerticalAlignment="Top" Width="42"/>
        <Button x:ConnectionId='15'                        x:Name="btnMinus" Content="-" HorizontalAlignment="Left" Margin="219,189,0,0" VerticalAlignment="Top" Width="42"/>
        <Button x:ConnectionId='16'                         x:Name="btnEqual" Content="=" HorizontalAlignment="Left" Margin="78,226,0,0" VerticalAlignment="Top" Width="42"/>
        <Button x:ConnectionId='17'                    x:Name="btn0" Content="0" HorizontalAlignment="Left" Margin="125,226,0,0" VerticalAlignment="Top" Width="42"/>
        <Button x:ConnectionId='18'                        x:Name="btnClear" Content="C" HorizontalAlignment="Left" Margin="172,226,0,0" VerticalAlignment="Top" Width="42"/>
        <Button x:ConnectionId='19'                       x:Name="btnPlus" Content="+" HorizontalAlignment="Left" Margin="219,226,0,0" VerticalAlignment="Top" Width="42"/>


        
        <TextBox x:ConnectionId='20' x:Name="TextBox_ExchangeRate" HorizontalAlignment="Left" Margin="465,158,0,0" Text="" VerticalAlignment="Top"/>
            <TextBlock  HorizontalAlignment="Left" Text="Exchange Rate" Margin="340,160,0,0" TextWrapping="Wrap" VerticalAlignment="Top" />
        
            <TextBox x:ConnectionId='21' x:Name="TextBox_Amount" HorizontalAlignment="Left" Margin="465,203,0,0" Text="" VerticalAlignment="Top"/>
            <TextBlock  HorizontalAlignment="Left" Text="Amount in £" Margin="340,210,0,0" TextWrapping="Wrap" VerticalAlignment="Top"  RenderTransformOrigin="0.521,0.75"/>
        
            <TextBlock x:ConnectionId='22' x:Name="TextBox_Ans" HorizontalAlignment="Left" Text="Amount in $" Margin="340,255,0,0" TextWrapping="Wrap" VerticalAlignment="Top" />
            <TextBox HorizontalAlignment="Left" Margin="465,250,0,0" Text="" VerticalAlignment="Top"/>
        
            <Button x:ConnectionId='23'  Content="Calculate" HorizontalAlignment="Left" Margin="549,252,0,0" VerticalAlignment="Top"                          />



    </Grid>












  
</Page>

